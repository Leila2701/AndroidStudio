<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b"
    android:onClick="CambiarFondp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtFragmento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="Inicio"
        android:text="Proyecto Fragments "
        android:textColor="@color/c"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFragmento">

        <Button
            android:id="@+id/btnCalculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="CambiarFondp"
            android:text="Calculadora"
            android:textColor="#FFFFFF"
            android:textColorHighlight="@color/black"
            android:textColorLink="#FFFFFF"
            android:textSize="12sp"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btnCovid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="CambiarFondp"
            android:text="Covid"
            android:textSize="12sp"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btnIntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="CambiarFondp"
            android:text="Intent"
            android:textSize="12sp"
            app:backgroundTint="#E91E63" />

        <Button
            android:id="@+id/btnPromedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="CambiarFondp"
            android:text="Promedio"
            android:textSize="12sp"
            app:backgroundTint="#E91E63" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/contenedorFragment"
        android:layout_width="411dp"
        android:layout_height="608dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>