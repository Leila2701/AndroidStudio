<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1F6D3"
    tools:context=".ItentFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_matrix_" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INTENTS IMPLICITOS"
            android:textColor="#00BCD4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingresar Texto"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSearchWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Web" />

        <Button
            android:id="@+id/btnActionSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action Send" />

        <Button
            android:id="@+id/btnIntel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intel Dial" />
    </LinearLayout>
</FrameLayout>