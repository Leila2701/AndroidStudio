<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDCCD2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="208dp"
        android:layout_height="57dp"
        android:onClick="MostrarView"
        android:text="@string/semana_03"
        android:textColor="#E91E63"
        android:textColorHighlight="#9C27B0"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:layout_editor_absoluteX="16dp" />

    <Spinner
        android:id="@+id/myspinnerOP"
        android:layout_width="364dp"
        android:layout_height="65dp"
        android:entries="@array/misDatos"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="MostrarView"
        android:text="@string/button"
        android:textSize="24sp"
        app:backgroundTint="#E91E63"
        app:layout_constraintEnd_toEndOf="@+id/myspinnerOP"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/myspinnerOP"
        app:layout_constraintTop_toBottomOf="@+id/myspinnerOP" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="127dp"
        android:layout_height="152dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/formulario" />

</androidx.constraintlayout.widget.ConstraintLayout>